{"ast":null,"code":"import Footer from \"@/components/Footer\";\nimport Comment from \"@/components/Comment\";\nexport default {\n  name: \"BlogDetail\",\n  components: {\n    Comment,\n    Footer\n  },\n  data() {\n    return {\n      blogId: this.$route.query.blogId,\n      blog: {},\n      tagsArr: [],\n      recommendList: []\n    };\n  },\n  created() {\n    this.load();\n    this.$request.put('/blog/updateReadCount/' + this.blogId);\n  },\n  methods: {\n    setLikes() {\n      this.$request.post('/likes/set', {\n        fid: this.blogId,\n        module: '博客'\n      }).then(res => {\n        if (res.code === '200') {\n          // 关闭所有已存在的消息\n          this.$message.closeAll();\n          this.$message.success('操作成功');\n          this.load(); // 重新加载数据\n        }\n      });\n    },\n\n    setCollect() {\n      this.$request.post('/collect/set', {\n        fid: this.blogId,\n        module: '博客'\n      }).then(res => {\n        if (res.code === '200') {\n          // 关闭所有已存在的消息\n          this.$message.closeAll();\n          this.$message.success('操作成功');\n          this.load(); // 重新加载数据\n        }\n      });\n    },\n\n    load() {\n      this.$request.get('/blog/selectById/' + this.blogId).then(res => {\n        this.blog = res.data || {};\n        this.tagsArr = JSON.parse(this.blog.tags || '[]');\n      });\n      this.$request.get('/blog/selectRecommend/' + this.blogId).then(res => {\n        this.recommendList = res.data || [];\n      });\n    }\n  }\n};","map":{"version":3,"names":["Footer","Comment","name","components","data","blogId","$route","query","blog","tagsArr","recommendList","created","load","$request","put","methods","setLikes","post","fid","module","then","res","code","$message","closeAll","success","setCollect","get","JSON","parse","tags"],"sources":["src/views/front/BlogDetail.vue"],"sourcesContent":["<template>\n  <div class=\"main-content\">\n    <div style=\"display: flex; grid-gap: 10px\">\n\n      <div style=\"flex: 1; width: 0\">\n        <div class=\"card\" style=\"padding: 30px; margin-bottom: 10px\">\n          <div style=\"font-weight: bold; font-size: 24px; margin-bottom: 20px\">{{ blog.title }}</div>\n          <div style=\"color: #666; margin-bottom: 20px\">\n            <span style=\"margin-right: 20px\"><i class=\"el-icon-user\"></i> {{ blog.userName }}</span>\n            <span style=\"margin-right: 20px\"><i class=\"el-icon-date\"></i> {{ blog.date }}</span>\n            <span style=\"margin-right: 20px\"><i class=\"el-icon-eye\"></i> {{ blog.readCount }}</span>\n            <span>\n              <el-tag v-for=\"item in tagsArr\" :key=\"item\" type=\"primary\" style=\"margin-right:5px\">{{ item }}</el-tag>\n            </span>\n          </div>\n\n          <div class=\"w-e-text\">\n            <div v-html=\"blog.content\"></div>\n          </div>\n\n        </div>\n\n        <!--     点赞和收藏数据   -->\n        <div class=\"card\" style=\"text-align: center; font-size: 20px; color: #666; margin-bottom: 10px\">\n          <span style=\"margin-right: 20px; cursor: pointer;\" @click=\"setLikes\" :class=\"{ 'active' : blog.userLike }\"><i class=\"el-icon-like\"></i> {{ blog.likesCount }}</span>\n          <span style=\" cursor: pointer\"  @click=\"setCollect\" :class=\"{ 'active' : blog.userCollect }\"><i class=\"el-icon-star-off\"></i> {{ blog.collectCount }}</span>\n        </div>\n\n\n<!--        评论-->\n        <Comment :fid=\"blogId\" module='博客' />\n\n      </div>\n\n      <div style=\"width: 260px\">\n        <div class=\"card\" style=\"margin-bottom: 10px\">\n\n          <div style=\"display: flex; align-items: center; grid-gap: 10px; margin-bottom: 10px\">\n            <img :src=\"blog.user?.avatar\" alt=\"\" style=\"width: 50px; height: 50px; border-radius: 50%\">\n            <div style=\"flex: 1;\">\n              <div style=\"font-weight: bold; margin-bottom: 5px\">{{ blog.user?.name }}</div>\n              <div style=\"color: #666; font-size: 13px\" class=\"line2\">{{ blog.user?.info }}</div>\n            </div>\n          </div>\n\n          <div style=\"display: flex\">\n            <div style=\"flex: 1; text-align: center\">\n              <div style=\"margin-bottom: 5px\">文章</div>\n              <div style=\"color: #888\">{{ blog.user?.blogCount }}</div>\n\n            </div>\n            <div style=\"flex: 1; text-align: center\">\n              <div style=\"margin-bottom: 5px\">点赞</div>\n              <div style=\"color: #888\">{{ blog.user?.likesCount }}</div>\n            </div>\n            <div style=\"flex: 1; text-align: center\">\n              <div style=\"margin-bottom: 5px\">收藏</div>\n              <div style=\"color: #888\">{{ blog.user?.collectCount }}</div>\n            </div>\n          </div>\n        </div>\n\n        <div class=\"card\" style=\"margin-bottom: 10px\">\n          <div style=\"font-weight: bold; font-size: 20px; padding-bottom: 10px; border-bottom: 1px solid #ddd; margin-bottom: 10px\">相关推荐</div>\n\n          <div>\n            <div style=\"margin-bottom: 15px\" v-for=\"item in recommendList\" :key=\"item.id\">\n              <a :href=\"'/front/blogDetail?blogId=' + item.id\" target=\"_blank\"><div class=\"recommend-title line2\">{{ item.title }}</div></a>\n              <div style=\"color: #888\">\n                <span>阅读</span> <span>{{ item.readCount }}</span>\n                <span style=\"margin-left: 10px\">点赞</span> <span>{{ item.likesCount }}</span>\n              </div>\n            </div>\n          </div>\n        </div>\n\n        <div class=\"card\">\n          <div style=\"display: flex; grid-gap: 10px; \">\n            <div style=\"flex: 1; line-height: 25px\">\n              加入代码研习社\n              学习精品项目\n            </div>\n            <img src=\"@/assets/imgs/广告.png\" alt=\"\" style=\"width: 50px; height: 50px; border-radius: 5px\">\n          </div>\n        </div>\n\n      </div>\n\n\n\n    </div>\n\n    <Footer />\n  </div>\n</template>\n\n<script>\nimport Footer from \"@/components/Footer\";\nimport Comment from \"@/components/Comment\";\n\nexport default {\n  name: \"BlogDetail\",\n  components: {\n    Comment,\n    Footer\n  },\n  data() {\n    return {\n      blogId: this.$route.query.blogId,\n      blog: {},\n      tagsArr: [],\n      recommendList: [],\n    }\n  },\n  created() {\n    this.load()\n\n    this.$request.put('/blog/updateReadCount/' + this.blogId)\n  },\n  methods: {\n\n    setLikes() {\n      this.$request.post('/likes/set', {  fid: this.blogId, module: '博客' }).then(res => {\n        if (res.code === '200') {\n          // 关闭所有已存在的消息\n          this.$message.closeAll();\n          this.$message.success('操作成功')\n          this.load()  // 重新加载数据\n        }\n      })\n    },\n    setCollect() {\n      this.$request.post('/collect/set', {  fid: this.blogId, module: '博客' }).then(res => {\n        if (res.code === '200') {\n          // 关闭所有已存在的消息\n          this.$message.closeAll();\n          this.$message.success('操作成功')\n          this.load()  // 重新加载数据\n        }\n      })\n    },\n    load() {\n      this.$request.get('/blog/selectById/' + this.blogId).then(res => {\n        this.blog = res.data || {}\n\n        this.tagsArr = JSON.parse(this.blog.tags || '[]')\n      })\n\n      this.$request.get('/blog/selectRecommend/' + this.blogId).then(res => {\n        this.recommendList = res.data || []\n      })\n    }\n  }\n}\n</script>\n\n<style>\n/* blockquote 样式 */\nblockquote {\n  display: block;\n  border-left: 8px solid #d0e5f2;\n  padding: 20px 10px;\n  margin: 10px 0;\n  line-height: 1.4;\n  font-size: 100%;\n  background-color: #f1f1f1;\n}\n\n/* code 样式 */\ncode {\n  display: inline-block;\n  *display: inline;\n  *zoom: 1;\n  //background-color: #2d2d2d;\n  //color: #f8f8f2; /* 一般代码颜色 */\n  background-color: #f1f1f1;\n  border-radius: 3px;\n  padding: 3px 5px;\n  margin: 0 3px;\n}\n.token.comment { color: #6a9955; } /* 注释，绿色 */\n.token.keyword { color: #c586c0; } /* 关键字，粉色 */\n.token.operator { color: #d4d4d4; } /* 操作符，白色 */\n.token.string { color: #ce9178; } /* 字符串，橙色 */\n.token.function { color: #dcdcaa; } /* 函数，黄色 */\n.token.class-name { color: #4ec9b0; } /* 类名，绿色 */\npre code {\n  display: block;\n}\np {\n  line-height: 30px\n}\n\n.active {\n  color: orange !important;\n  //color: #ff187c !important;\n}\n.recommend-title {\n  margin-bottom: 5px;\n}\n.recommend-title:hover {\n  color: #2a60c9;\n}\n.comment-active {\n  color: #2a60c9;\n}\npre {\n  white-space: pre-wrap; /*css-3*/\n  white-space: -moz-pre-wrap; /*Mozilla,since1999*/\n  white-space: pre-wrap; /*Opera4-6*/\n  white-space: -o-pre-wrap; /*Opera7*/\n  word-wrap: break-word; /*InternetExplorer5.5+*/\n}\n</style>"],"mappings":"AAiGA,OAAAA,MAAA;AACA,OAAAC,OAAA;AAEA;EACAC,IAAA;EACAC,UAAA;IACAF,OAAA;IACAD;EACA;EACAI,KAAA;IACA;MACAC,MAAA,OAAAC,MAAA,CAAAC,KAAA,CAAAF,MAAA;MACAG,IAAA;MACAC,OAAA;MACAC,aAAA;IACA;EACA;EACAC,QAAA;IACA,KAAAC,IAAA;IAEA,KAAAC,QAAA,CAAAC,GAAA,iCAAAT,MAAA;EACA;EACAU,OAAA;IAEAC,SAAA;MACA,KAAAH,QAAA,CAAAI,IAAA;QAAAC,GAAA,OAAAb,MAAA;QAAAc,MAAA;MAAA,GAAAC,IAAA,CAAAC,GAAA;QACA,IAAAA,GAAA,CAAAC,IAAA;UACA;UACA,KAAAC,QAAA,CAAAC,QAAA;UACA,KAAAD,QAAA,CAAAE,OAAA;UACA,KAAAb,IAAA;QACA;MACA;IACA;;IACAc,WAAA;MACA,KAAAb,QAAA,CAAAI,IAAA;QAAAC,GAAA,OAAAb,MAAA;QAAAc,MAAA;MAAA,GAAAC,IAAA,CAAAC,GAAA;QACA,IAAAA,GAAA,CAAAC,IAAA;UACA;UACA,KAAAC,QAAA,CAAAC,QAAA;UACA,KAAAD,QAAA,CAAAE,OAAA;UACA,KAAAb,IAAA;QACA;MACA;IACA;;IACAA,KAAA;MACA,KAAAC,QAAA,CAAAc,GAAA,4BAAAtB,MAAA,EAAAe,IAAA,CAAAC,GAAA;QACA,KAAAb,IAAA,GAAAa,GAAA,CAAAjB,IAAA;QAEA,KAAAK,OAAA,GAAAmB,IAAA,CAAAC,KAAA,MAAArB,IAAA,CAAAsB,IAAA;MACA;MAEA,KAAAjB,QAAA,CAAAc,GAAA,iCAAAtB,MAAA,EAAAe,IAAA,CAAAC,GAAA;QACA,KAAAX,aAAA,GAAAW,GAAA,CAAAjB,IAAA;MACA;IACA;EACA;AACA"},"metadata":{},"sourceType":"module","externalDependencies":[]}